<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditGoal"
    android:background="#4A3367">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Goal"
                android:textAlignment="center"
                android:textColor="#F6F3F3"
                android:textSize="24sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/categoryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#F8F6F6" />

            <Spinner
                android:id="@+id/categoriesSpinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_text" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Description"
                android:textColor="#F8F6F6" />

            <EditText
                android:id="@+id/descriptionGoalEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text"
                android:ems="10"
                android:hint="Description"
                android:inputType="text"
                android:textColor="#FDFBFB"
                android:textColorHint="#D1D1D1" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Total Amount"
                android:textColor="#F8F6F6" />
            <EditText
                android:id="@+id/totalAmountGoalEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text"
                android:ems="10"
                android:hint="Target Amount"
                android:inputType="numberDecimal"
                android:textColor="#FDFBFB"
                android:textColorHint="#D1D1D1" />
            <TextView
                android:id="@+id/textVi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/accumulated_amount"
                android:textColor="#F8F6F6" />
            <EditText
                android:id="@+id/accumulatedAmountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text"
                android:ems="10"
                android:hint="Accumulated Amount"
                android:inputType="numberDecimal"
                android:textColor="#FDFBFB"
                android:textColorHint="#D1D1D1" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="Save"
                android:textSize="20sp" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#F62D2D"
                android:padding="5dp"
                android:text="Delete"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>